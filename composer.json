{
	"name": "noris/jsoner",
	"type": "mediawiki-extension",
	"require-dev": {
		"phpunit/phpunit": "5.2.*",
		"jakub-onderka/php-parallel-lint": "0.9.*",
		"mediawiki/mediawiki-codesniffer": "0.6.*"
	},
	"scripts": {
		"test": [
			"phpunit tests/",
			"parallel-lint . --exclude vendor",
			"phpcs -p -s"
		]
	},
	"require": {
		"php": ">=5.6",
		"ext-curl": "*",
		"ext-fileinfo": "*",
		"ext-intl": "*",
		"ext-mbstring": "*",
		"league/uri": "4.1.*",
		"rwillians/stingray": "^2.0",
		"composer/installers": "~1.0"
	},
	"autoload": {
		"psr-4": {
			"jsoner\\": "src/"
		}
	}
}
